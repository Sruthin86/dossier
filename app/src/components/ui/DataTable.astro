---
const { headers = [], rows = [], classes = "" } = Astro.props;
---

<table class={classes}>
  <thead>
    <tr>
      {headers.map(header => (
        <th>{header}</th>
      ))}
    </tr>
  </thead>
  <tbody>
    {rows.map(row => (
      <tr>
        {row.map(cell => (
          <td>{cell}</td>
        ))}
      </tr>
    ))}
  </tbody>
</table>